{
  "name": "web-app-server",
  "version": "1.0.0",
  "description": "одаренные-дети",
  "author": "jokcik",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "nodemon": "nodemon -L -e ts,json --exec ts-node --ignoreWarnings 2307 src/server.ts",
    "start": "ts-node -r tsconfig-paths/register src/main.ts --port 3001",
    "start:dev": "nodemon",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js --port 8080",
    "start:backup": "node dist/main.js --port 9090",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^5.0.0",
    "@nestjs/core": "^5.0.0",
    "@nestjs/microservices": "^5.0.0",
    "@nestjs/passport": "^1.0.10",
    "@nestjs/testing": "^5.0.0",
    "@nestjs/websockets": "^5.0.0",
    "cron": "^1.3.0",
    "express-cors": "0.0.3",
    "express-formidable": "^1.0.0",
    "fastify-formbody": "^2.0.0",
    "jsonwebtoken": "^8.2.2",
    "mongoose": "^5.7.5",
    "mv": "^2.1.1",
    "nconf": "^0.10.0",
    "nodemailer": "^4.6.5",
    "optimist": "^0.6.1",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "sharp": "^0.20.3",
    "typescript": "^2.7.2",
    "uniqid": "^4.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.8",
    "@types/mongoose": "^5.0.15",
    "@types/node": "^9.3.0",
    "@types/supertest": "^2.0.4",
    "jest": "^21.2.1",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^4.3.0",
    "ts-node": "^6.0.5",
    "tsconfig-paths": "^3.3.2",
    "tslint": "5.3.2",
    "webpack": "^4.10.2",
    "webpack-cli": "^2.1.4",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
